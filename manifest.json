{
    "name": "Çevir Gelsin",
    "description": "data dosyası içinde bulunan sozluk.json dan açıklamaları seçerek ilgili kelimenin yanına yazar.",
    "version": "1.0",
    "manifest_version": 3,
    "web_accessible_resources": [{
      "resources": ["data/sozluk.json"],
      "matches": ["<all_urls>"],
      "extension_ids": []
    }],
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting","<all_urls>","https://*/*","tabs"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "cat.png",
        "32": "cat.png",
        "48": "cat.png",
        "128": "cat.png"
      }
    },
    "icons": {
      "16": "cat.png",
      "32": "cat.png",
      "48": "cat.png",
      "128": "cat.png"
    }
    
  }